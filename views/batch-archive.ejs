<script src="https://cdn.jsdelivr.net/npm/dayjs@1.11.7/dayjs.min.js"></script>
<!-- Include the duration plugin -->
<script src="https://cdn.jsdelivr.net/npm/dayjs@1.11.7/plugin/duration.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-moment"></script>

<script>
  // Try registering with window.ChartZoom
	if (window.ChartZoom) {
	Chart.register(window.ChartZoom);
	}

	// If not available, try window.Zoom
	else if (window.Zoom) {
	Chart.register(window.Zoom);
	}

	// If not available, try window.chartjsPluginZoom
	else if (window.chartjsPluginZoom) {
	Chart.register(window.chartjsPluginZoom);
	}

	// If none are available, log an error
	else {
	console.error('Zoom plugin not found in global scope.');
	}

	dayjs.extend(window.dayjs_plugin_duration);

</script>


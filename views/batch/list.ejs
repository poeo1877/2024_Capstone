<div class="container-fluid">
    <div class="row page-titles mx-0">
        <div class="col-sm-6 p-md-0">
            <div class="welcome-text">
                <h4>Batch List</h4>
                <p class="mb-0">배치 리스트 생성 조회</p>
            </div>
        </div>
        <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
            <a type="button" class="btn btn-primary" href="./create">
                Create Batch
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Batch</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-responsive-sm">
                            <thead>
                                <tr>
                                    <th>Batch ID</th>
                                    <th>Recipe Name</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% batches.forEach(function(batch) { %>
                                <tr>
                                    <td><%= batch.batch_id %></td>
                                    <td>
                                        <%= batch.Recipe ?
                                        batch.Recipe.recipe_name : 'N/A' %>
                                    </td>
                                    <td>
                                        <%=
                                        batch.start_time.toLocaleDateString() %>
                                    </td>
                                    <td>
                                        <%= batch.end_time ?
                                        batch.end_time.toLocaleDateString() :
                                        'In Progress' %>
                                    </td>
                                    <td>
                                        <a
                                            href="/batch/<%= batch.batch_id %>"
                                            class="btn btn-primary"
                                        >
                                            Check
                                        </a>
                                    </td>
                                    <td><input type="checkbox" /></td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

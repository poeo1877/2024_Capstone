<link rel="stylesheet" href="/css/style.css" />
<!-- 기본 스타일 유지 -->

<!-- 에러 페이지에만 적용될 추가 CSS -->
<style>
    .form-input-content {
        justify-content: center;
        align-items: center;
        text-align: center;
        position: absolute; /* 절대 위치로 중앙 정렬 */
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%); /* 정확히 중앙에 배치 */
        max-width: 90%; /* 최대 너비를 90%로 설정 */
        width: auto; /* 부모 요소의 너비를 자동으로 조정 */
        padding: 20px;
        box-sizing: border-box; /* 패딩이 너비에 포함되도록 설정 */
        white-space: normal; /* 텍스트 줄바꿈을 허용 */
        overflow-wrap: break-word; /* 긴 텍스트를 줄바꿈 */
    }

    .btn {
        justify-content: center;
        align-items: center;
        min-width: 150px; /* 버튼이 충분히 넓게 나오도록 설정 */
    }
</style>

<body>
    <div class="form-input-content">
        <div class="mb-5">

        </div>
        <h1 class="error-text font-weight-bold"><%= errorNumber %></h1>
        <!-- 에러 번호 -->
        <h4 class="mt-4"><%= errorTitle %></h4>
        <!-- 에러 제목 -->
        <p><%= errorMessage %></p>
        <!-- 에러 메시지 -->
    </div>
</body>
